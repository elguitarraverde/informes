<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="id" display="none" order="0">
                <widget type="text" fieldname="id"/>
            </column>
            <column name="filter" display="none" order="10">
                <widget type="text" fieldname="idreportfilter"/>
            </column>

            <column name="paid" order="100">
                <widget type="select" fieldname="pagada" translate="true" required="true">
                    <values title="yes">1</values>
                    <values title="no">0</values>
                </widget>
            </column>

            <column name="from-date" numcolumns="2" order="110">
                <widget type="date" fieldname="fechadesde"/>
            </column>

            <column name="until-date" numcolumns="2" order="120">
                <widget type="date" fieldname="fechahasta"/>
            </column>
        </group>
    </columns>
</view>