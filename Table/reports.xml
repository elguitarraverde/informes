<table>
    <column>
        <name>compared</name>
        <type>integer</type>
    </column>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>name</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <column>
        <name>table</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <column>
        <name>type</name>
        <type>character varying(10)</type>
        <null>NO</null>
    </column>
    <column>
        <name>xcolumn</name>
        <type>character varying(100)</type>
    </column>
    <column>
        <name>xoperation</name>
        <type>character varying(100)</type>
    </column>
    <column>
        <name>ycolumn</name>
        <type>character varying(100)</type>
    </column>
    <column>
        <name>idreportfilter</name>
        <type>integer</type>
    </column>
    <constraint>
        <name>reports_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>ca_reports_filters_reports_</name>
        <type>FOREIGN KEY (idreportfilter) REFERENCES reports_filters (id) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
